1. Ubuntu Server LTS - Set Default Config with Linite

sudo wget 'https://keyserver.ubuntu.com/pks/lookup?op=get&search=0x869689FE09306074' \
  -O '/etc/apt/trusted.gpg.d/phd-chromium.asc'

echo "deb https://freeshell.de/phd/chromium/$(lsb_release -sc) /" \
  | sudo tee /etc/apt/sources.list.d/phd-chromium.list

sudo apt update; sudo apt install chromium xdotool

>>> >>> >>>
2. Preparing OpenBox
sudo nano /etc/xdg/openbox/autostart

# (PT1) Disable any form of screen saver / screen blanking / power management
xset s off
xset s noblank
xset -dpms

# (PT2) Allow quitting the X server with CTRL-ATL-Backspace
setxkbmap -option terminate:ctrl_alt_bksp

# (PT3) Start Chromium in kiosk mode
sed -i 's/"exited_cleanly":false/"exited_cleanly":true/' ~/.config/chromium/'Local State'
sed -i 's/"exited_cleanly":false/"exited_cleanly" :true/; s/"exit_type":"[^"]\+"/"exit_type":"Normal"/' ~/.config/chromium/Default/Preferences

bash /home/administrador/kiosk/.switch-tab.sh & echo $! | tee ~/kiosk/pid_tab

chromium \
--start-fullscreen \
--kiosk \
--incognito \
--noerrdialogs \
--disable-translate \
--no-first-run \
--fast \
--fast-start \
--disable-infobars \
--disable-features=TranslateUI \
--disk-cache-dir=/dev/null \
--password-store=basic \
--disable-pinch \
--overscroll-history-navigation=disabled \
--disable-features=TouchpadOverscrollHistoryNavigation $(cat ~/kiosk/websites) && kill -9 $(cat ~/kiosk/pid_tab) && killall openbox

>>> >>> >>>
3. Alternating Tabs!
nano ~/kiosk/switch-tab.sh

#!/bin/bash
export DISPLAY=:0.0
export XAUTHORITY=/home/administrador/.Xauthority

function normal_run {
  while true; do
    sleep $(cat ~/kiosk/duration)
    /usr/bin/xdotool key Ctrl+Tab
  done
}

[ -f ~/kiosk/zoomin ] && {
  value0=$(cat ~/kiosk/zoomin)
  [ "value0" = 110 ] && { numero=1; }
  [ "value0" = 125 ] && { numero=2; }
  [ "value0" = 150 ] && { numero=3; }
  [ "value0" = 175 ] && { numero=4; }
  [ "value0" = 200 ] && { numero=5; }
  [ "value0" = 250 ] && { numero=6; }
  [ "value0" = 300 ] && { numero=7; }
while true; do
  for ((i=1; i<=numero; i++))
  do
    /usr/bin/xdotool key Ctrl+plus 
  done
done
  normal_run
} || {
  echo .>/dev/null
}

[ -f ~/kiosk/zoomout ] && {
  value1=$(cat ~/kiosk/zoomout)
  [ "value1" = 90 ] && { numero=1; }
  [ "value1" = 80 ] && { numero=2; }
  [ "value1" = 75 ] && { numero=3; }
  [ "value1" = 67 ] && { numero=4; }
  [ "value1" = 50 ] && { numero=5; }
  [ "value1" = 33 ] && { numero=6; }
  [ "value1" = 25 ] && { numero=7; }
  while true; do
    for ((i=1; i<=numero; i++))
    do
      /usr/bin/xdotool key Ctrl+minus
    done
  done
    normal_run
} || {
  echo .>/dev/null
}

normal_run
exit 1

chmod u+x ~/kiosk/switch-tab.sh

